#!/usr/bin/env bash
set -e

if [[ ! -d "${NVIM_HOME}" ]]; then
    echo "Doing initial install of Neovim plugins... (this might take a while)"
    git clone https://github.com/nachovizzo/dotfiles.git /tmp/dotfiles >/dev/null

    mkdir -p ${HOME}/.config/
    cp -R /tmp/dotfiles/.config/nvim/ ${HOME}/.config/
    source /tmp/dotfiles/.config/yadm/functions.sh
    install_neovim_extensions

    echo "Initial install of Neovim plugins done."
else
    echo "Neovim plugins already initialized! Skiping..."
fi
